{
  "name": "@mixer/arcade-machine-react",
  "version": "1.0.2",
  "description": "Input abstraction layer for gamepads, keyboards, and UWP apps",
  "module": "dist/index.js",
  "main": "dist/cjs/index.js",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all -p lint:ts test:unit test:fmt",
    "test:unit": "karma start test/karma.config.js --single-run",
    "test:watch": "karma start test/karma.config.js --watch",
    "test:fmt": "prettier --list-different \"{src,demo}/**/*.{json,ts,tsx}\"",
    "start": "webpack-dev-server --config demo/webpack.config.js",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "prepare": "npm run build",
    "lint:ts": "tslint --project tsconfig.json --fix \"src/**/*.{ts,tsx}\"",
    "fmt": "prettier --write \"{src,demo}/**/*.{json,ts,tsx}\" && npm run lint:ts -- --fix"
  },
  "author": "Connor Peet <connor@peet.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/chai": "^4.1.7",
    "@types/enzyme": "^3.9.1",
    "@types/mocha": "^5.2.6",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/winrt-uwp": "0.0.19",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^4.0.0",
    "karma-webpack": "^3.0.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "react-dom": "^16.8.6",
    "rxjs": "^6.2.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "rxjs": "^6.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "dependencies": {
    "react": "^16.8.0",
    "uwp-keycodes": "^1.1.1"
  }
}
