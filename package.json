{
  "name": "@mixer/arcade-machine-react",
  "version": "1.1.0",
  "description": "Input abstraction layer for gamepads, keyboards, and UWP apps",
  "module": "dist/index.js",
  "main": "dist/cjs/index.js",
  "sideEffects": false,
  "scripts": {
    "test": "npm-run-all -p lint:ts test:unit test:fmt",
    "test:unit": "karma start test/karma.config.js --single-run",
    "test:watch": "karma start test/karma.config.js --watch",
    "test:fmt": "prettier --list-different \"{src,docs}/**/*.{json,ts,tsx}\"",
    "start": "webpack-dev-server --config docs/webpack.config.js",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "build:docs": "webpack --config docs/webpack.production.js",
    "prepare": "npm run build",
    "lint:ts": "tslint --project tsconfig.json --fix \"{src,docs}/**/*.{ts,tsx}\"",
    "fmt": "prettier --write \"{src,docs}/**/*.{json,ts,tsx}\" && npm run lint:ts -- --fix"
  },
  "author": "Connor Peet <connor@peet.io>",
  "license": "MIT",
  "devDependencies": {
    "@ibm/plex": "^2.0.0",
    "@types/chai": "^4.1.7",
    "@types/enzyme": "^3.9.3",
    "@types/mocha": "^5.2.7",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-highlight": "^0.12.1",
    "@types/winrt-uwp": "0.0.19",
    "chai": "^4.2.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^4.1.0",
    "karma-webpack": "^3.0.5",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prism-react-renderer": "^0.1.6",
    "raw-loader": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-github-corner": "^2.3.0",
    "react-highlight": "^0.12.0",
    "react-reconciler": "^0.20.4",
    "rxjs": "^6.5.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.5",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "rxjs": "^6.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "dependencies": {
    "uwp-keycodes": "^1.1.1"
  }
}
